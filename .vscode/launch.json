    "version": "0.2.0",
    "configurations": [
        {
            "name": "generate traffic scene",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/examples/generate_traffic_scene.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Automatic control test",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/automatic_scenario_test.py",
            "args": ["--scenario=urban_traffic"],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Manual control test",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/manual_scenario_test.py",
            "args": [
                "--scenario=urban_traffic",
                "--start-carla",
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "train ppo urban traffic",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": [
                "--scenario=urban_traffic",
                "--algorithm=ppo",
                "--train",
                "--render",
                "--start-carla",
                "--quality=Low",
                "--offscreen",
                "--run-name=test",
                "--timesteps=200000"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "play ppo urban traffic",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": [
                "--scenario=urban_traffic",
                "--algorithm=ppo",
                "--eval",
                "--load-model=models/ppo/checkpoints/2025-04-12_18-43-29_ppo_hyperparameter_tuning_ppo_ppo_UrbanTrafficScenario/checkpoint_560000.zip",
                "--render",
                "--start-carla",
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}